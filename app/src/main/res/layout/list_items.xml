<?xml version="1.0" encoding="utf-8"?><android.support.constraint.ConstraintLayout    xmlns:android="http://schemas.android.com/apk/res/android"    android:layout_width="fill_parent"    android:layout_height="103dp"    android:orientation="horizontal">    <RelativeLayout        android:id="@+id/morning"        android:layout_width="match_parent"        android:layout_height="match_parent">        <RelativeLayout            android:layout_width="match_parent"            android:layout_marginLeft="6dp"            android:layout_marginRight="6dp"            android:layout_height="24dp">            <ImageView                android:id="@+id/image"                android:layout_width="24dp"                android:layout_height="24dp" />        </RelativeLayout>        <RelativeLayout            android:layout_width="match_parent"            android:layout_height="79dp"            android:layout_marginLeft="6dp"            android:layout_marginRight="6dp"            android:layout_marginTop="24dp"            android:layout_centerHorizontal="true"            android:background="@drawable/relative_layout_border">            <LinearLayout                android:id="@+id/time_background"                android:layout_width="80dp"                android:layout_height="79dp"                android:orientation="vertical">                <TextView                    android:id="@+id/start_time"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:gravity="center"                    android:text="9  : 30"                    android:textColor="#FFFFFF" />                <TextView                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:gravity="center"                    android:text="|"                    android:textColor="#FFFFFF" />                <TextView                    android:id="@+id/end_time"                    android:layout_width="match_parent"                    android:layout_height="match_parent"                    android:layout_weight="1"                    android:gravity="center"                    android:text="11 : 30"                    android:textColor="#FFFFFF" />            </LinearLayout>            <TextView                android:id="@+id/course_Name"                android:layout_width="170dp"                android:layout_height="29dp"                android:layout_marginStart="90dp"                android:layout_marginTop="8dp"                android:fontFamily="Arial"                android:text="钢琴课"                android:textColor="#101010"                android:textSize="18dp" />            <TextView                android:id="@+id/teacher_Name"                android:layout_width="170dp"                android:layout_height="29dp"                android:layout_marginStart="90dp"                android:layout_marginTop="40dp"                android:fontFamily="Arial"                android:text="李老师:"                android:textColor="#101010"                android:textSize="12dp" />            <TextView                android:id="@+id/comment"                android:layout_width="128dp"                android:layout_height="128dp"                android:layout_marginTop="41dp"                android:layout_marginStart="145dp"                android:textColor="#F76262"                android:text="又乖又聪明又好学又勤快又努力又机灵又敏锐"                android:background="@drawable/relative_layout_border"                android:maxLines="3"                android:ellipsize="end"                android:textSize="11dp" />            <RelativeLayout                android:id="@+id/start_teaching_relativeLayout"                android:layout_width="70dp"                android:layout_height="79dp"                android:layout_alignParentEnd="true"                android:layout_marginRight="9dp">                <Button                    android:id="@+id/start_teaching"                    android:layout_width="70dp"                    android:layout_height="25dp"                    android:layout_marginTop="10dp"                    android:background="@drawable/btn_shape"                    android:text="上课按钮"                    android:textColor="#FFFFFF"                    android:textSize="14sp" />            </RelativeLayout>        </RelativeLayout>    </RelativeLayout></android.support.constraint.ConstraintLayout>